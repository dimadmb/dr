{% extends 'base.html.twig' %}

{% block body %}

<style>
table {

border-collapse: collapse;
border-spacing: 0;

	
	color:#B93646;
	font-size:10px;
	
}
td {
	border:1px solid #B93646;
	padding:0 5px;
}
td:nth-child(1){
	font-size:12px;
	font-weight:900;
	width:192px;
	border-left:none;
}
td:nth-child(2),td:nth-child(3){
	text-align:center;
}
td:nth-child(4){
	font-size:14px;
	font-weight:900;
	border-right:none;
	/*width:200px;*/
}


</style>

{#{dump(array)}#}

<div style="width:525px; margin:150px auto 0;">
<h1 style="color:#B93646; margin-bottom:5px;	font-size:46px; text-align:center;">Поздравляем!</h1>


<table>
	{% for item in array %}
	<tr>
		<td>{{item.name }}</td>
		<td>{{item.place}}</td>
		<td>{{item.dolg }}</td>
		<td>{{item.date }}</td>
		<!--<td>{{item.age  }}</td>-->

	</tr>
	{% endfor %}
</table>

</div>	
{% endblock %}